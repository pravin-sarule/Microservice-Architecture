{
  "info": {
    "name": "Web Search API Tests",
    "description": "Postman collection for testing web search functionality with Serper.dev integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "AUTH_TOKEN",
      "value": "YOUR_JWT_TOKEN_HERE",
      "type": "string"
    },
    {
      "key": "FILE_ID",
      "value": "YOUR_FILE_ID_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Test Web Search - Current Events",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{AUTH_TOKEN}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"question\": \"What are the latest developments in AI technology in 2025?\",\n  \"file_id\": \"{{FILE_ID}}\",\n  \"llm_name\": \"gpt-4o\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{BASE_URL}}/api/doc/chat",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "doc", "chat"]
        },
        "description": "This query should trigger web search because it contains 'latest' and '2025' keywords"
      },
      "response": []
    },
